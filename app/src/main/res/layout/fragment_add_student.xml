<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.admin.AdminDashboardFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_first_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="First Name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/ev_first_name"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:backgroundTint="#ECE6F0"
            android:drawableStart="@drawable/ic_email"
            android:singleLine="true"
            android:text="Satish"
            android:textColor="#0C092A"
            android:textColorHint="#858494"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_first_name" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_middle_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Middle Name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ev_first_name" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/ev_middle_name"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:backgroundTint="#ECE6F0"
            android:drawableStart="@drawable/ic_email"
            android:singleLine="true"
            android:text="Dnyaneshwar"
            android:textColor="#0C092A"
            android:textColorHint="#858494"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_middle_name" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_last_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Last Name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ev_middle_name" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/ev_last_name"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:backgroundTint="#ECE6F0"
            android:drawableStart="@drawable/ic_email"
            android:singleLine="true"
            android:text="Bodake"
            android:textColor="#0C092A"
            android:textColorHint="#858494"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_last_name" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_student_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Student Address"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ev_last_name" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/ev_student_address"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:backgroundTint="#ECE6F0"
            android:singleLine="true"
            android:text="Senior Teacher"
            android:textColor="#0C092A"
            android:textColorHint="#858494"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_student_address" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_student_dob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date of Birth"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ev_student_address" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/ev_student_dob"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:backgroundTint="#ECE6F0"
            android:drawableStart="@drawable/ic_email"
            android:singleLine="true"
            android:text=""
            android:textColor="#0C092A"
            android:textColorHint="#858494"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_student_dob" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_student_gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Teacher Gender"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ev_student_dob" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/ev_student_gender"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:backgroundTint="#ECE6F0"
            android:drawableStart="@drawable/ic_email"
            android:singleLine="true"
            android:text="Male"
            android:textColor="#0C092A"
            android:textColorHint="#858494"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_student_gender" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Student Phone Number"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ev_student_gender" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/ev_phone_number"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:backgroundTint="#ECE6F0"
            android:drawableStart="@drawable/ic_email"
            android:singleLine="true"
            android:textColor="#0C092A"
            android:textColorHint="#858494"
            android:text="8600381118"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_phone_number" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Student Email"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ev_phone_number" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/ev_email"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:backgroundTint="#ECE6F0"
            android:drawableStart="@drawable/ic_email"
            android:singleLine="true"
            android:text="a@a.com"
            android:textColor="#0C092A"
            android:textColorHint="#858494"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_email" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_parent_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Parent Name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ev_email" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/ev_parent_name"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:backgroundTint="#ECE6F0"
            android:drawableStart="@drawable/ic_email"
            android:singleLine="true"
            android:textColor="#0C092A"
            android:textColorHint="#858494"
            android:textSize="16sp"
            android:text="Dnyaneshwar Bodake"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_parent_name" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_parent_phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Parent Number"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ev_parent_name" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/ev_parent_phone_number"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:backgroundTint="#ECE6F0"
            android:drawableStart="@drawable/ic_email"
            android:singleLine="true"
            android:textColor="#0C092A"
            android:textColorHint="#858494"
            android:textSize="16sp"
            android:text="8600381118"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_parent_phone_number" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_admission_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Admission Date"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ev_parent_phone_number" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/ev_admission_date"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:backgroundTint="#ECE6F0"
            android:drawableStart="@drawable/ic_email"
            android:singleLine="true"
            android:textColor="#0C092A"
            android:textColorHint="#858494"
            android:textSize="16sp"
            android:text=""
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_admission_date" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Student Status"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ev_admission_date" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/ev_status"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:backgroundTint="#ECE6F0"
            android:drawableStart="@drawable/ic_email"
            android:singleLine="true"
            android:textColor="#0C092A"
            android:textColorHint="#858494"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_status" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Add Student"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ev_status"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>